<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">order_import_profile_form.order_import_profile_form_data_source</item>
            <item name="ajaxSave" xsi:type="boolean">true</item>
            <item name="component" xsi:type="string">Amasty_ImportPro/js/form</item>
            <item name="downloadSampleFileConfig" xsi:type="array">
                <item name="openFieldsConfigTab" xsi:type="string">order_import_profile_form.areas.fields</item>
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">Profile Set Up Steps</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_validate" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\SaveAndValidate"/>
            <button name="save_and_run" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\SaveAndRun"/>
            <button name="save_and_continue" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\SaveAndContinueButton"/>
            <button name="save" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\SaveButton"/>
            <button name="reset" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\ResetButton"/>
            <button name="duplicate" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\DuplicateButton"/>
            <button name="back" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\BackButton"/>
            <button name="download_sample_file" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\DownloadSampleFile"/>
            <button name="delete" class="Amasty\OrderImport\Block\Adminhtml\Edit\Button\DeleteButton"/>
        </buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
        <namespace>order_import_profile_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>order_import_profile_form.order_import_profile_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="order_import_profile_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Amasty_ImportCore/js/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="amorderimport/profile/save"/>
        </settings>
        <dataProvider class="Amasty\OrderImport\Ui\DataProvider\Profile\Form" name="order_import_profile_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General Configuration</label>
            <additionalClasses>
                <class name="amorderimport-general-title">true</class>
            </additionalClasses>
        </settings>
        <fieldset name="configuration">
            <settings>
                <label translate="true">General Configuration</label>
                <collapsible>true</collapsible>
                <opened>true</opened>
                <dataScope/>
            </settings>
            <field name="name" formElement="input">
                <settings>
                    <label translate="true">Profile Name</label>
                    <dataType>text</dataType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
        </fieldset>
        <fieldset name="order_actions">
            <settings>
                <label translate="true">Actions with Orders After Importing</label>
                <collapsible>true</collapsible>
                <additionalClasses>
                    <class name="amimportcore-field">true</class>
                </additionalClasses>
            </settings>
            <field name="change_status" formElement="select">
                <settings>
                    <label translate="true">Change Processed Orders Status To</label>
                    <dataType>select</dataType>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Amasty\OrderImport\Model\OptionSource\OrderStatuses"/>
                            <caption translate="true">-- Please Select --</caption>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="change_status_new" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="imports" xsi:type="array">
                            <item name="selectValue" xsi:type="string">${ $.parentName }.change_status:value</item>
                        </item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/select-driven-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Change Only New Orders Status</label>
                </settings>
            </field>
            <field name="invoice_order" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Invoice Order After Importing</label>
                    <tooltip>
                        <description translate="true">The order would be invoiced after importing if the setting is enabled.</description>
                    </tooltip>
                    <switcherConfig>
                        <rules>
                            <rule name="0">
                                <value>0</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_invoice</target>
                                        <callback>hide</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.invoice_order_new</target>
                                        <callback>hide</callback>
                                    </action>
                                </actions>
                            </rule>
                            <rule name="1">
                                <value>1</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_invoice</target>
                                        <callback>show</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.invoice_order_new</target>
                                        <callback>show</callback>
                                    </action>
                                </actions>
                            </rule>
                        </rules>
                        <enabled>true</enabled>
                    </switcherConfig>
                </settings>
            </field>
            <field name="invoice_order_new" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Invoice Only New Orders</label>
                </settings>
            </field>
            <field name="notify_customer_invoice" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Notify Customer about Invoice</label>
                </settings>
            </field>
            <field name="ship_order" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Ship Order After Importing</label>
                    <tooltip>
                        <description translate="true">The order would be shipped after importing if the setting is enabled.</description>
                    </tooltip>
                    <switcherConfig>
                        <rules>
                            <rule name="0">
                                <value>0</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_shipment</target>
                                        <callback>hide</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.ship_order_new</target>
                                        <callback>hide</callback>
                                    </action>
                                </actions>
                            </rule>
                            <rule name="1">
                                <value>1</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_shipment</target>
                                        <callback>show</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.ship_order_new</target>
                                        <callback>show</callback>
                                    </action>
                                </actions>
                            </rule>
                        </rules>
                        <enabled>true</enabled>
                    </switcherConfig>
                </settings>
            </field>
            <field name="ship_order_new" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Ship Only New Orders</label>
                </settings>
            </field>
            <field name="notify_customer_shipment" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Notify Customer about Shipment</label>
                </settings>
            </field>
            <field name="memo_order" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Create Credit Memo After Importing</label>
                    <dataType>select</dataType>
                    <tooltip>
                        <description translate="true">Credit Memo for the order would be created after importing if the setting is enabled.</description>
                    </tooltip>
                    <switcherConfig>
                        <rules>
                            <rule name="0">
                                <value>0</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_memo</target>
                                        <callback>hide</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.memo_order_new</target>
                                        <callback>hide</callback>
                                    </action>
                                </actions>
                            </rule>
                            <rule name="1">
                                <value>1</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.notify_customer_memo</target>
                                        <callback>show</callback>
                                    </action>
                                    <action name="1">
                                        <target>order_import_profile_form.areas.general.general.order_actions.memo_order_new</target>
                                        <callback>show</callback>
                                    </action>
                                </actions>
                            </rule>
                        </rules>
                        <enabled>true</enabled>
                    </switcherConfig>
                </settings>
            </field>
            <field name="memo_order_new" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Create Credit Memo for Only New Orders</label>
                </settings>
            </field>
            <field name="notify_customer_memo" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Notify Customer about Credit Memo</label>
                </settings>
            </field>
            <field name="cancel_order" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Cancel Order After Importing</label>
                    <tooltip>
                        <description translate="true">The order would be canceled after importing if the setting is enabled.</description>
                    </tooltip>
                    <switcherConfig>
                        <rules>
                            <rule name="0">
                                <value>0</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.cancel_order_new</target>
                                        <callback>hide</callback>
                                    </action>
                                </actions>
                            </rule>
                            <rule name="1">
                                <value>1</value>
                                <actions>
                                    <action name="0">
                                        <target>order_import_profile_form.areas.general.general.order_actions.cancel_order_new</target>
                                        <callback>show</callback>
                                    </action>
                                </actions>
                            </rule>
                        </rules>
                        <enabled>true</enabled>
                    </switcherConfig>
                </settings>
            </field>
            <field name="cancel_order_new" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="additionalClasses" xsi:type="string">-child</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="component" xsi:type="string">Amasty_OrderImport/js/form/element/single-checkbox</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Cancel Only New Orders</label>
                </settings>
            </field>
        </fieldset>
        <container name="run" component="Amasty_ImportPro/js/run/run">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="idField" xsi:type="string">id</item>
                    <item name="requestIdField" xsi:type="string">profile_id</item>
                </item>
            </argument>
            <container name="modal">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="componentType" xsi:type="string">modal</item>
                        <item name="component" xsi:type="string">Magento_Ui/js/modal/modal-component</item>
                        <item name="options" xsi:type="array">
                            <item name="type" xsi:type="string">popup</item>
                            <item name="modalClass" xsi:type="string">ameimportpro-modal-container</item>
                            <item name="title" xsi:type="string" translate="true">Generate Profile</item>
                        </item>
                    </item>
                </argument>
                <container name="import-process">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="componentType" xsi:type="string">container</item>
                            <item name="startUrl" xsi:type="url" path="*/*/import"/>
                            <item name="statusUrl" xsi:type="url" path="amimport/import/status"/>
                            <item name="downloadUrl" xsi:type="url" path="amimport/import/download/processIdentity/_process_identity_"/>
                            <item name="template" xsi:type="string">Amasty_ImportPro/run/import-process</item>
                            <item name="component" xsi:type="string">Amasty_ImportPro/js/run/import-process</item>
                        </item>
                    </argument>
                </container>
            </container>
        </container>
    </fieldset>
    <fieldset name="file_config">
        <settings>
            <label translate="true">File Settings</label>
        </settings>
    </fieldset>
    <fieldset name="file_source">
        <settings>
            <label translate="true">Import Source</label>
        </settings>
    </fieldset>
    <fieldset name="import_behavior">
        <settings>
            <label translate="true">Import Settings</label>
        </settings>
    </fieldset>
    <fieldset name="fields">
        <settings>
            <label translate="true">Fields Configuration</label>
            <additionalClasses>
                <class name="amorderimport-fields-configuration">true</class>
            </additionalClasses>
        </settings>
        <container name="container_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="template" xsi:type="string">ui/form/components/complex</item>
                    <item name="label" xsi:type="string"></item>
                    <item name="additionalClasses" xsi:type="string">amorderimport-tooltip</item>
<!--                    <item name="text" xsi:type="string" translate="true">Here we have a tree structure with root entity and its subentities. Each subenity has its own fields to be added into the export file.</item>-->
                </item>
            </argument>
        </container>
    </fieldset>
    <fieldset name="conditions">
        <settings>
            <label translate="true">Import Filters</label>
        </settings>
    </fieldset>
    <fieldset name="automatic_import">
        <settings>
            <label translate="true">Automatic Import</label>
        </settings>
        <container name="schedule_container">
            <argument name="data" xsi:type="array">
                <item name="dataScope" xsi:type="string" />
                <item name="type" xsi:type="string">group</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Schedule</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </container>
    </fieldset>
    <fieldset name="alert_notifications">
        <settings>
            <label translate="true">Alert Notifications</label>
            <additionalClasses>
                <class name="amorderimport-general-title">true</class>
            </additionalClasses>
        </settings>
    </fieldset>
    <fieldset name="import_history" class="Amasty\OrderImport\Ui\Component\Form\ImportHistoryFieldset">
        <settings>
            <label translate="true">Import History</label>
            <additionalClasses>
                <class name="amorderimport-grid-fieldset">true</class>
            </additionalClasses>
        </settings>
        <insertListing name="history_grid" component="Amasty_OrderImport/js/insert-history-listing">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!--Avoid admin__scope-old cssclass assign -->
                    <item name="cssclass" xsi:type="string">history-grid-insert-listing</item>
                    <item name="autoRender" xsi:type="boolean">true</item>
                    <item name="externalProvider" xsi:type="string">order_import_history_listing.order_import_history_listing_data_source</item>
                    <item name="ns" xsi:type="string">order_import_history_listing</item>
                    <item name="jobType" xsi:type="string">order_import</item>
                    <item name="imports" xsi:type="array">
                        <item name="jobId" xsi:type="string">${ $.provider }:data.id</item>
                    </item>
                    <item name="exports" xsi:type="array">
                        <item name="jobId" xsi:type="string">${ $.externalProvider }:params.job_id</item>
                        <item name="jobType" xsi:type="string">${ $.externalProvider }:params.job_type</item>
                    </item>
                </item>
            </argument>
        </insertListing>
    </fieldset>
</form>
